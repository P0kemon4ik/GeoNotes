<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background"
        >
    <include layout="@layout/toolbar"
             android:id="@+id/toolbar"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Готово"
            android:id="@+id/txt_gotovo"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Отмена"
            android:id="@+id/txt_otmena"
            android:layout_alignBottom="@+id/txt_gotovo"
            android:layout_marginLeft="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_oval"
            android:id="@+id/imgChangeColor"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:layout_below="@+id/toolbar"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            />

    <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/imageView2"
            android:background="@drawable/shape_rect"
            android:src="@drawable/note3"
            android:layout_below="@+id/imgChangeColor"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/txt_notes_body"
            android:background="#00000000"
            android:layout_alignTop="@+id/imageView2"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_alignStart="@+id/imageView2"
            android:layout_alignRight="@+id/imageView2"
            android:layout_alignEnd="@+id/imageView2"
            android:layout_marginTop="35dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_marginBottom="10dp"
            />
    <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btn_map"
            android:background="@drawable/earth" android:layout_below="@+id/imageView2"
            android:layout_alignRight="@+id/imgChangeColor"
            android:layout_alignEnd="@+id/imgChangeColor"
            android:layout_marginTop="30dp"/>

</RelativeLayout>